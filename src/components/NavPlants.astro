<style>
    nav {
        animation: sticky-menu linear both;
        animation-timeline: scroll(root block);
        animation-range: 0 12.5rem;
    }
    strong{
        color: var(--primary-ligth);
    }
    #menu{
        transform: translateY(-100%);
    }
    ul a:active {
        background: rgb(255, 255, 255, 0.2);
    }
    #btn-closed, #btn-open {
        grid-column: 1/2;
        grid-row: 1/2;
        transition: transform 300ms;
        color: var(--primary-ligth);
    }
    #btn-open{
        transform: scale(1);
    }
    #btn-closed{
        transform: scale(0);
    }
    @keyframes sticky-menu {
        to {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(0.25rem);
        }
    }
    @media (width >= 768px) {
        #menu {
            transform: translateY(0);
            color: var(--primary-ligth);
        }
        #menu a:hover {
            color: var(--secundary-ligth);
        }
        #menu a:active {
            background: none;
        }
    }
</style>