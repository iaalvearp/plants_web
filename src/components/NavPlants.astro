<script>
    const navLogo = document.getElementById('nav-logo');
    const textLogo = document.getElementById('text-logo');
    const btnOpen = document.getElementById('btn-open');
    const btnClose = document.getElementById('btn-closed');
    const menu = document.getElementById('menu');
    const inputs = document.querySelectorAll('.nav-link')

    const openMenu = () => {
        navLogo.style.stroke = "var(--bg-ligth)";
        textLogo.style.color = "var(--bg-ligth)";
        btnOpen.style.transform = "scale(0)";
        btnClose.style.stroke = "var(--bg-ligth)";
        btnClose.style.transform = "scale(1)";
        menu.style.transform = "translateY(0)";
    }

    const closeMenu = () => {
        navLogo.style.stroke = "var(--primary-ligth)";
        textLogo.style.color = "var(--primary-ligth)";
        btnOpen.style.transform = "scale(1)";
        btnClose.style.stroke = "var(--primary-ligth)";
        btnClose.style.transform = "scale(0)";
        menu.style.transform = "translateY(-100%)";
    }

    btnOpen.addEventListener('click', openMenu);
    btnClose.addEventListener('click', closeMenu);

    inputs.forEach(input => {
        input.addEventListener('click', ()=>{
            if ( window.innerWidth < 768 ) {
                closeMenu()
            }
        })
    })

    window.addEventListener('resize', ()=>{
        if ( window.innerWidth < 768 ) {
                closeMenu()
            }
        else {
            menu.style.transform = "translateY(0)"
        }
    })

</script>

